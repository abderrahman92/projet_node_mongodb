
  <!DOCTYPE html>
  <html>
    <head>
      <link rel='stylesheet' href='/stylesheets/style.css' />
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
       
    </head>
    <body>
      <header>
        <%- include('./navbar.ejs'); %>
    </header>
   
          <% if (articles.length > 0) { %>
            <% articles.map( articles => { %>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= articles.name %></h5>
                                <p class="card-text"><%= user_id.name %></p>
                                <% if (user_id.length > 0) { %>
                                    <% user_id.map( users => { %>
                                      <p class="card-text"><%= user_id._id %></p>
                                    <% }) %>
                                <% } else { %> 
                                  <p class="card-text">Article sans User</p>  
                                <% } %> 
                                <a href="/article/<%=articles._id%>" class="btn btn-primary">more details</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
          <% } else { %>
            <p class="card-text">Aucun utilisateur</p>
          <% } %>
    </body>
  </html>
  