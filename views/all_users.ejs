<div class="container">
    <div class="row">
    <% if (users.length > 0) { %>
        <% users.map( users => { %>
        
                    <div class="col-sm">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= users.firstname %></h5>
                                <p class="card-text"><%= users.lastname %></p>
                                <a href="#" class="btn btn-primary"><%= users.age %></a>
                                <a href="/delete/<%=users._id%>" class="btn btn-danger">supprimer</a>
                                <a href="/edite/<%=users._id%>" class="btn btn-primary">modifier</a>
                            </div>
                        </div>
                    </div>
   
        <% }) %>
       
    </div>
</div>          
    <% } else { %>
        <p class="card-text">Aucun utilisateur</p>
    <% } %>
